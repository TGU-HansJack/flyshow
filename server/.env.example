# 监听端口
PORT=8787

# 单用户模式凭据（默认模式）
FLYSHOW_USER=flyshow
FLYSHOW_PASS=changeme
# 可选：为单用户模式开启 Token（插件可用 Bearer/X-Flyshow-Token）
# FLYSHOW_TOKEN=your-long-token

# 可选：多用户模式（true 开启，用户路径为 /<username>/...）
FLYSHOW_MULTI=false
# 多用户模式管理员账号
FLYSHOW_ADMIN_USER=admin
FLYSHOW_ADMIN_PASS=changeme

# 数据与站点输出目录（可挂载到宿主）
FLYSHOW_DATA_DIR=./data
FLYSHOW_OUT_DIR=./site

# MySQL 数据库（用于用户/Token/邀请码等）
FLYSHOW_DB_HOST=127.0.0.1
FLYSHOW_DB_PORT=3306
FLYSHOW_DB_USER=flyshow
FLYSHOW_DB_PASS=changeme
FLYSHOW_DB_NAME=flyshow
# 可选表前缀
FLYSHOW_DB_PREFIX=flyshow_
